<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<CloudService id="CloudService">
    <SYBLDirective
		Constraints="Co4:CONSTRAINT cost.PerHour &lt; 60 Euro;Co5:CONSTRAINT costPerClientPerHour &lt; 3 Euro WHEN clientsNb > 0 ;" Strategies="St2: STRATEGY minimize(cost.PerHour)"/>
	<ServiceTopology id="MainTopology">
			<ServiceTopology id="CassandraServiceTopology">
			<SYBLDirective
				Constraints="Co1:CONSTRAINT latency.average &lt; 30 ms;Co2:CONSTRAINT cpu.usage &lt; 80 %" />
				<Relationship>
					<Master>CassandraController</Master>
					<Slave>CassandraNode</Slave>
				</Relationship>
				<ServiceUnit  id="CassandraController" />
				<ServiceUnit id="CassandraNode" />
			</ServiceTopology>
			<ServiceTopology id="WebServiceTopology">
			    <SYBLDirective Constraints="Co3:CONSTRAINT responseTime &lt; 450 ms" />
				<Relationship>
					<Master>LoadBalancer</Master>
					<Slave>WebService</Slave>
				</Relationship>
				<ServiceUnit id="LoadBalancer" />
				<ServiceUnit id="WebService" >
					<SYBLDirective
					Strategies="St1:STRATEGY CASE responseTime &lt; 360 ms AND throughput_average &lt; 300 : scalein" />					
				</ServiceUnit>
			</ServiceTopology>
			<Relationship>
				<Master>WebServiceTopology</Master>
				<Slave>CassandraServiceTopology</Slave>
			</Relationship>
	</ServiceTopology>
</CloudService>
